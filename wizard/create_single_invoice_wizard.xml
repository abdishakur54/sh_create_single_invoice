<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_single_invoice_wizard" model="ir.ui.view">
        <field name="name">view.single.invoice.wizard</field>
        <field name="model">sh.single.invoice.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <field name="confirmation_message" nolabel="1" style="font-weight:bold;"/>
                <footer>
                    <button  string="Yes"   class="oe_highlight" type="object" name="confirm_create_single_invoice" context="{'open_invoices': True}"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" icon="fa-remove" />
                </footer>
            </form>
        </field>
    </record>
</odoo>